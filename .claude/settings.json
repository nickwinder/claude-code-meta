      "WebSearch",
      "WebFetch(domain:claude.ai)",
      "WebFetch(domain:code.claude.com)",
      "WebFetch(domain:docs.anthropic.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:modelcontextprotocol.io)",
      "Bash(mkdir:*)",
      "Bash(python3:*)",
      "Bash(ls:*)",
